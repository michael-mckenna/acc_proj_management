<%= render 'layouts/navigation' %>

<div class="container">
	<div id="user_profile">
		<div class="row">
			<div class="col-md-12 col-lg-3">
				<i class="fas fa-user fa-10x" id="user_image"></i>
			</div>

			<div class="col-md-12 col-lg-9">
				<div id="user_info_container">
					<h3 id="user_info_heading">Profile</h3>
					<div id="user_info_contents">
						<div>
							<span class="data_heading">Name:</span> <%= @user.name %>
						</div>

						<div>
							<span class="data_heading">Status:</span>
								<% if @user.is_admin %>
									Admin
								<% else %>
									Member
								<% end %>
						</div>

						<div>
							<div class="data_heading">Project:</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
