<%= form_for [@user,@project], :html => { :class => "form-horizontal project" } do |f| %>

  <% if @project.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@project.errors.count, "error") %> occured:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="container-form">
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-lg-12">
      <%= f.text_field :name, :class => 'form-control' %>
    </div> 
  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-12">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
  </div>

  <%= f.hidden_field :user_id, value: params[:user_id], :class => 'form-control' %>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-success', :id=> "create_proj_btn" %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn btn-default', :id=> "cancel_create_proj_btn" %>
    </div>
  </div>
</div>
<% end %>